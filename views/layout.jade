doctype html
html(lang='us')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title= title
    style(type='text/css').
      body {
        color: #f0f0f0;
        background: #121212;
        font-family: Arial;
        width: 100%
        text-align: center;
      }
      .wrapper {
        width: 75%;
        margin: auto;
        background: #4F4F4F;
        border-radius: 10px;
        padding: 1rem 1.5rem;
      }
      a {
        text-decoration: none;
        color: #A7F1FF;
      }
      a:hover {
        text-decoration: underline;
      }
      h1 a {
        color: #f0f0f0;
      }
      p {
        white-space: pre-wrap;
      }
  body
   .wrapper
     block content
